# ================================================================================================
# Mini POS - Environment Variables Template
# ================================================================================================
# This file serves as a template for environment-specific configuration.
# Copy this file to .env and update the values for your environment.
#
# Usage: cp .env.example .env
#
# IMPORTANT: Never commit the .env file to version control!
# The .env file contains sensitive information like passwords and API keys.
# ================================================================================================

# ================================================================================================
# Database Configuration (REQUIRED - docker-compose will fail without these)
# ================================================================================================

DB_HOST=localhost

# Database port (default: 3306)
DB_PORT=3306

DB_NAME=mini_pos
DB_USER=root
DB_PASSWORD=root_password

ConnectionStrings__DefaultConnection=Server=localhost;Port=3306;Database=mini_pos;User=root;Password=root_password;

# ================================================================================================
# Application Configuration
# ================================================================================================

ASPNETCORE_ENVIRONMENT=Development
LOG_LEVEL=Information

# ================================================================================================
# Docker Configuration
# ================================================================================================

DOCKER_DB_HOST=mariadb
DOCKER_CONNECTION_STRING=Server=mariadb;Port=3306;Database=mini_pos;User=root;Password=root_password;

# ================================================================================================
# Display Configuration
# ================================================================================================

DISPLAY=:0

# ================================================================================================
# Additional Settings
# ================================================================================================

APP_TITLE=Mini POS System
APP_LOCALE=lo-LA
SESSION_TIMEOUT=30
DEBUG_MODE=true

# ================================================================================================
# Security Settings
# ================================================================================================

JWT_SECRET=your_jwt_secret_key_here
PASSWORD_HASH_ROUNDS=10
ENABLE_HTTPS=false
