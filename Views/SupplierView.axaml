<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:mini_pos.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="mini_pos.Views.SupplierView"
             x:DataType="vm:SupplierViewModel"
             FontFamily="{StaticResource LaoFont}">

    <UserControl.Styles>
        <Style Selector="Button.action">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto, *" Margin="20">
        
        <!-- Top Bar -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
             <Grid.ColumnDefinitions>
                 <ColumnDefinition Width="Auto"/>
                 <ColumnDefinition Width="*"/>
                 <ColumnDefinition Width="Auto"/>
             </Grid.ColumnDefinitions>

             <!-- Add Button -->
             <Button Grid.Column="0" Classes="action" Background="#0D47A1" Command="{Binding AddCommand}">
                 <TextBlock Text="ເພີ່ມ"/>
             </Button>

             <!-- Search -->
             <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                 <TextBlock Text="ຄົ້ນຫາ" VerticalAlignment="Center" Foreground="{DynamicResource TextMutedColor}"/>
                 <TextBox Classes="input" Width="250" Text="{Binding SearchText}"/>
             </StackPanel>
        </Grid>

        <!-- List -->
        <Border Grid.Row="1" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1,1,1,0" Background="{DynamicResource SurfaceColor}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <Grid RowDefinitions="Auto, *">
                <!-- Header -->
                <Border Grid.Row="0" Background="#FFB74D" Height="44">
                    <Grid ColumnDefinitions="110, 2.2*, 1.6*, 2.2*, 1.2*, 3*, 60, 60">
                        <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                            <TextBlock Text="ລະຫັດຜູ້ສະຫນອງ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11" TextWrapping="Wrap" TextAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="1" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                            <TextBlock Text="ຊື່ຜູ້ສະຫນອງ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="2" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                            <TextBlock Text="ຊື່ຜູ້ປະສານງານ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="3" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                            <TextBlock Text="ອີເມວ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                         <Border Grid.Column="4" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                            <TextBlock Text="ເບີໂທລະສັບ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                         <Border Grid.Column="5" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                            <TextBlock Text="ທີ່ຢູ່" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border Grid.Column="6" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                            <TextBlock Text="ແກ້ໄຂ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Grid.Column="7" Text="ລຶບ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Data -->
                <ListBox Grid.Row="1" ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}" Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="110, 2.2*, 1.6*, 2.2*, 1.2*, 3*, 60, 60" Height="44">
                                <TextBlock Text="{Binding Id}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}" TextWrapping="NoWrap"/>
                                <TextBlock Grid.Column="1" Text="{Binding Name}" Margin="10,0" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Column="2" Text="{Binding ContactName}" Margin="10,0" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Column="3" Text="{Binding Email}" Margin="10,0" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Column="4" Text="{Binding Phone}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}" TextWrapping="NoWrap"/>
                                <TextBlock Grid.Column="5" Text="{Binding Address}" Margin="10,0" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                                 
                                 <!-- Edit Button -->
                                 <Button Grid.Column="6" Background="Transparent" 
                                         Command="{Binding $parent[UserControl].((vm:SupplierViewModel)DataContext).EditCommand}" 
                                         HorizontalAlignment="Center">
                                   <PathIcon Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" 
                                             Width="16" Height="16" Foreground="#1976D2"/>
                                </Button>

                                <!-- Delete Button -->
                                <Button Grid.Column="7" Background="Transparent" 
                                        Command="{Binding $parent[UserControl].((vm:SupplierViewModel)DataContext).DeleteCommand}" 
                                        HorizontalAlignment="Center">
                                   <PathIcon Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                             Width="16" Height="16" Foreground="#D32F2F"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                     <ListBox.Styles>
                         <Style Selector="ListBoxItem">
                             <Setter Property="Padding" Value="0,6"/>
                             <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                             <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                             <Setter Property="BorderThickness" Value="0,0,0,1"/>
                         </Style>
                     </ListBox.Styles>
                 </ListBox>
             </Grid>
            </ScrollViewer>
        </Border>

    </Grid>
</UserControl>
