<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:mini_pos.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
             x:Class="mini_pos.Views.EmployeeView"
             x:DataType="vm:EmployeeViewModel"
             FontFamily="{StaticResource LaoFont}">

    <UserControl.Styles>
        <Style Selector="Button.action">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style Selector="TextBox.form">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        <!-- Employee table styling (header + rows) -->
        <Style Selector="Border.empCell">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>
        <Style Selector="Border.empCellLast">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>
        <Style Selector="TextBlock.empCellText">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto, Auto, *" Margin="20" ShowGridLines="False">

        <!-- Title -->
        <TextBlock Text="ຈັດການຂໍ້ມູນພະນັກງານ" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="{DynamicResource TextColor}"/>

        <!-- 1. Input Form -->
        <Border Grid.Row="1" 
                BorderBrush="{DynamicResource BorderColor}" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="20" 
                Margin="0,0,0,20"
                Background="{DynamicResource SurfaceColor}">
            <StackPanel>
                 <Grid ColumnDefinitions="*, *, *, Auto">
                    <!-- Column 1 -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ລະຫັດພະນັກງານ"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Classes="form" Text="{Binding EmployeeId}"/>
                        </Grid>
                         <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ຊື່ພະນັກງານ"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Classes="form" Text="{Binding EmployeeName}"/>
                        </Grid>
                         <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ນາມສະກຸນ"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Classes="form" Text="{Binding EmployeeSurname}"/>
                        </Grid>
                         <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ເພດ"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="20" VerticalAlignment="Center" Margin="0,0,0,10">
                                <RadioButton Content="ຊາຍ" GroupName="Gender" IsChecked="{Binding EmployeeGender, Converter={StaticResource StringToBoolConverter}, ConverterParameter=ຊາຍ}"/>
                                <RadioButton Content="ຍິງ" GroupName="Gender" IsChecked="{Binding EmployeeGender, Converter={StaticResource StringToBoolConverter}, ConverterParameter=ຍິງ}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Column 2 -->
                    <StackPanel Grid.Column="1" Margin="0,0,20,0">
                        <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ວັນເດືອນປີເກີດ"/>
                            <DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding EmployeeDateOfBirth}" HorizontalAlignment="Stretch" Margin="0,0,0,10"/>
                        </Grid>
                         <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ແຂວງ"/>
                             <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0,0,0,10" 
                                       ItemsSource="{Binding Provinces}" SelectedItem="{Binding SelectedProvinceItem}">
                                 <ComboBox.ItemTemplate>
                                     <DataTemplate>
                                         <TextBlock Text="{Binding Name}"/>
                                     </DataTemplate>
                                 </ComboBox.ItemTemplate>
                             </ComboBox>
                        </Grid>
                         <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ເມືອງ"/>
                             <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0,0,0,10"
                                       ItemsSource="{Binding Districts}" SelectedItem="{Binding SelectedDistrictItem}">
                                 <ComboBox.ItemTemplate>
                                     <DataTemplate>
                                         <TextBlock Text="{Binding Name}"/>
                                     </DataTemplate>
                                 </ComboBox.ItemTemplate>
                             </ComboBox>
                        </Grid>
                        <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ບ້ານ"/>
                             <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0,0,0,10"
                                       ItemsSource="{Binding Villages}" SelectedItem="{Binding SelectedVillageItem}">
                                 <ComboBox.ItemTemplate>
                                     <DataTemplate>
                                         <TextBlock Text="{Binding Name}"/>
                                     </DataTemplate>
                                 </ComboBox.ItemTemplate>
                             </ComboBox>
                        </Grid>
                    </StackPanel>

                    <!-- Column 3 -->
                    <StackPanel Grid.Column="2" Margin="0,0,20,0">
                         <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ເບີໂທລະສັບ"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Classes="form" Text="{Binding EmployeePhoneNumber}"/>
                        </Grid>
                          <Grid ColumnDefinitions="Auto, *">
                             <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ບັນຊີເຂົ້າໃຊ້"/>
                             <TextBox Grid.Row="0" Grid.Column="1" Classes="form" Text="{Binding EmployeeId}" IsReadOnly="True" Background="{DynamicResource SurfaceLightColor}"/>
                         </Grid>
                         <Grid ColumnDefinitions="Auto, *">
                             <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ລະຫັດຜ່ານ"/>
                             <TextBox Grid.Row="0" Grid.Column="1" Classes="form" Text="{Binding EmployeePassword}" PasswordChar="*"/>
                         </Grid>
                         <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="ສະຖານະ"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" Margin="0,0,0,10"
                                      ItemsSource="{Binding Positions}" SelectedItem="{Binding SelectedPosition}"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Column 4: Image -->
                    <StackPanel Grid.Column="3" Width="150">
                        <Border Width="120" Height="120" Background="#FFCC80" Margin="0,0,0,10" CornerRadius="4">
                             <!-- Image Placeholder -->
                             <Image Source="{Binding EmployeeImagePath, Converter={StaticResource ImagePathToBitmapConverter}}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Button Content="ເລືອກຮູບ" Click="SelectImage_Click" HorizontalAlignment="Center" Background="#37474F" Foreground="White"/>
                    </StackPanel>
                </Grid>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Classes="action" Background="#0D47A1" Command="{Binding AddCommand}">
                        <TextBlock Text="ເພີ່ມ"/>
                    </Button>
                    <Button Classes="action" Background="#FBC02D" Command="{Binding EditCommand}" Foreground="Black">
                        <TextBlock Text="ແກ້ໄຂ"/>
                    </Button>
                    <Button Classes="action" Background="#C62828" Command="{Binding DeleteCommand}">
                        <TextBlock Text="ລຶບ"/>
                    </Button>
                    <Button Classes="action" Background="#616161" Command="{Binding CancelCommand}">
                        <TextBlock Text="ຍົກເລີກ"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 2. Search & List -->
        <Grid Grid.Row="2" RowDefinitions="Auto, *">
            <!-- Search -->
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Left" Margin="0,0,0,10">
                <TextBlock Text="ຄົ້ນຫາ" VerticalAlignment="Center" Foreground="{DynamicResource TextMutedColor}"/>
                <TextBox Width="250" Text="{Binding SearchText}"/>
            </StackPanel>

            <!-- Table -->
            <Border Grid.Row="1" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1,1,1,0" Background="{DynamicResource SurfaceColor}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <Grid RowDefinitions="Auto, *">
                        <!-- Header -->
                        <Border Grid.Row="0" Background="#FFB74D" Height="44">
                            <Grid ColumnDefinitions="60, 90, 1.6*, 1.6*, 60, 110, 110, 120, 120, 1.8*, 120, 80, 110">
                                <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ຮູບ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="1" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ລະຫັດ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="2" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ຊື່ພະນັກງານ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="3" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ນາມສະກຸນ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="4" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ເພດ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="5" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ວັນເດືອນປີເກີດ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                                </Border>
                                <Border Grid.Column="6" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ເບີໂທ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="7" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ແຂວງ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="8" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ເມືອງ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="9" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ບ້ານ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="10" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ບັນຊີ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="11" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0">
                                    <TextBlock Text="ລະຫັດ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Column="12">
                                    <TextBlock Text="ສະຖານະ" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Data List -->
                        <ListBox Grid.Row="1" ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}" Background="Transparent" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="60, 90, 1.6*, 1.6*, 60, 110, 110, 120, 120, 1.8*, 120, 80, 110" Height="44">
                                        <!-- Image -->
                                        <Border Classes="empCell" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Panel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <PathIcon Data="{StaticResource IconProfile}" Width="24" Height="24" Foreground="{DynamicResource TextMutedColor}"
                                                          IsVisible="{Binding ImagePath, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
                                                <Image Source="{Binding ImagePath, Converter={StaticResource ImagePathToBitmapConverter}}" Width="40" Height="40" Stretch="UniformToFill"
                                                       IsVisible="{Binding ImagePath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                            </Panel>
                                        </Border>

                                        <Border Grid.Column="1" Classes="empCell" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding Id}" HorizontalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="2" Classes="empCell" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding Name}" HorizontalAlignment="Left" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="3" Classes="empCell" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding Surname}" HorizontalAlignment="Left" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="4" Classes="empCell" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding Gender}" HorizontalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="5" Classes="empCell" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding DateOfBirth, StringFormat='{}{0:dd/MM/yyyy}'}" HorizontalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="6" Classes="empCell" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding PhoneNumber}" HorizontalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="7" Classes="empCell" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding Province}" HorizontalAlignment="Left" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="8" Classes="empCell" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding District}" HorizontalAlignment="Left" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="9" Classes="empCell" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding Village}" HorizontalAlignment="Left" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="10" Classes="empCell" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding Username}" HorizontalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="11" Classes="empCell" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="*****" HorizontalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                        <Border Grid.Column="12" Classes="empCellLast" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <TextBlock Classes="empCellText" Text="{Binding Position}" HorizontalAlignment="Center" Foreground="{DynamicResource TextColor}"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                                <Style Selector="ListBoxItem:pointerover">
                                    <Setter Property="Background" Value="{DynamicResource SurfaceLightColor}"/>
                                </Style>
                                <Style Selector="ListBoxItem:selected">
                                    <Setter Property="Background" Value="#263238"/>
                                </Style>
                            </ListBox.Styles>
                        </ListBox>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</UserControl>
