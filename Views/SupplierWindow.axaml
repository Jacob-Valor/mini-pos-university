<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:mini_pos.ViewModels"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        x:Class="mini_pos.Views.SupplierWindow"
        x:DataType="vm:SupplierViewModel"
        Width="500" Height="650"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="BorderOnly"
        ExtendClientAreaToDecorationsHint="True"
        FontFamily="{StaticResource LaoFont}"
        Title="ຂໍ້ມູນຜູ້ສະຫນອງ">

    <Window.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Width" Value="100"/>
        </Style>
        <Style Selector="TextBox">
             <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style Selector="Button.action">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </Window.Styles>

    <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Background="{DynamicResource SurfaceColor}">
        <Grid RowDefinitions="Auto, *, Auto">
            <!-- Custom Title Bar mimicking the image's window look -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Background="Transparent" Margin="10">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <!-- Icon placeholder if needed, image shows WP icon -->
                    <PathIcon Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6Z"
                              Width="20" Height="20" Foreground="#0D47A1"/>
                    <TextBlock Text="ຂໍ້ມູນຜູ້ສະຫນອງ" VerticalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5">
                   <Button Background="Transparent" Command="{Binding CancelCommand}" Padding="5">
                        <PathIcon Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" Width="10" Height="10" Foreground="Black"/>
                   </Button>
                </StackPanel>
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="40,20,40,0" Spacing="5">
                <TextBlock Text="ຈັດການຂໍ້ມູນຜູ້ສະຫນອງ" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Grid ColumnDefinitions="Auto, *">
                    <TextBlock Classes="label" Text="ລະຫັດຜູ້ສະຫນອງ"/>
                    <TextBox Grid.Column="1" Text="{Binding CurrentSupplier.Id}" IsReadOnly="False"/>
                    <!-- Assuming User can edit, or maybe read only if auto-generated? Image shows it filled. -->
                </Grid>

                <Grid ColumnDefinitions="Auto, *">
                    <TextBlock Classes="label" Text="ຊື່ຜູ້ສະຫນອງ"/>
                    <TextBox Grid.Column="1" Text="{Binding CurrentSupplier.Name}"/>
                </Grid>

                <Grid ColumnDefinitions="Auto, *">
                    <TextBlock Classes="label" Text="ຊື່ຜູ້ປະສານງານ"/>
                    <TextBox Grid.Column="1" Text="{Binding CurrentSupplier.ContactName}"/>
                </Grid>

                <Grid ColumnDefinitions="Auto, *">
                    <TextBlock Classes="label" Text="ອີເມວ"/>
                    <TextBox Grid.Column="1" Text="{Binding CurrentSupplier.Email}"/>
                </Grid>

                <Grid ColumnDefinitions="Auto, *">
                    <TextBlock Classes="label" Text="ເບີໂທລະສັບ"/>
                    <TextBox Grid.Column="1" Text="{Binding CurrentSupplier.Phone}"/>
                </Grid>

                <Grid ColumnDefinitions="Auto, *">
                    <TextBlock Classes="label" Text="ທີ່ຢູ່" VerticalAlignment="Top" Margin="0,5,10,0"/>
                    <TextBox Grid.Column="1" Text="{Binding CurrentSupplier.Address}" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
                </Grid>

            </StackPanel>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Margin="0,0,0,30">
                <Button Classes="action" Background="#0D47A1" Command="{Binding SaveCommand}">
                    <TextBlock Text="ເພີ່ມ"/>
                </Button>
                <!-- Image shows Add(Blue) Edit(Yellow) Cancel(DarkGrey) all together.
                     Usually we toggle Add/Edit visibility.
                     For strictly following image, I will put them there. -->
                 <Button Classes="action" Background="#FBC02D" Command="{Binding SaveCommand}" Foreground="Black">
                    <TextBlock Text="ແກ້ໄຂ"/>
                </Button>
                 <Button Classes="action" Background="#616161" Command="{Binding CancelCommand}">
                    <TextBlock Text="ຍົກເລີກ"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>

</Window>
